  },
  {
    "id": "heroine_protocol_3_1",
    "type": "dialogue",
    "background": "game/videos/cutscenes/opening.mp4",
    "speaker": "魏娇娇",
    "text": "请求总部AI\"亚里士多德\"授权，",
