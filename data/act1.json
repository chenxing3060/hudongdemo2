    "unlocksCodex": "meme_pollution"
  },
  {
    "id": "heroine_protocol_2_2",
    "type": "dialogue",
    "background": "game/videos/cutscenes/opening.mp4",
    "speaker": "魏娇娇",
    "text": "污染源：未知的\"都市传说\"类故事原型。",
